<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Enhanced ZNS Connection Views with Debugging -->
    <record id="zns_connection_form_view" model="ir.ui.view">
        <field name="name">zns.connection.form</field>
        <field name="model">zns.connection</field>
        <field name="arch" type="xml">
            <form string="ZNS Connection">
                <header>
                    <button name="test_connection" string="Test Connection" type="object" class="btn-primary"/>
                    <button name="test_template_params" string="Test Template" type="object" class="btn-info"/>
                    <button name="test_raw_api" string="Raw API Test" type="object" class="btn-warning"/>
                    <button name="check_account_status" string="Check Account" type="object" class="btn-warning"/>
                    <button name="debug_api_info" string="Debug API" type="object" class="btn-secondary"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Connection Name"/>
                        </h1>
                    </div>
                    
                    <!-- Error Alert -->
                    <div class="alert alert-danger" role="alert" attrs="{'invisible': [('last_error', '=', False)]}">
                        <h5>üö® Last Error:</h5>
                        <field name="last_error" nolabel="1"/>
                    </div>
                    
                    <group>
                        <group string="API Configuration">
                            <field name="api_key" password="True" placeholder="Enter your BOM API Key"/>
                            <field name="api_base_url"/>
                            <field name="active"/>
                        </group>
                        <group string="Token Status">
                            <field name="access_token" readonly="1" widget="text" attrs="{'invisible': [('access_token', '=', False)]}"/>
                            <field name="token_expires_at" readonly="1"/>
                            <field name="last_sync" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Setup Guide">
                            <group>
                                <div class="alert alert-info" role="alert">
                                    <h4>üîë How to get your API Key (JWT Token):</h4>
                                    <ol>
                                        <li>Login to BOM dashboard: <a href="https://zns.bom.asia" target="_blank">https://zns.bom.asia</a></li>
                                        <li>Go to <strong>API Settings</strong> or <strong>Developer</strong> section</li>
                                        <li>Copy your <strong>JWT Token</strong> (looks like: eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9...)</li>
                                        <li>Paste it in the "API Key" field above</li>
                                        <li>Click "Test Connection"</li>
                                    </ol>
                                    <hr/>
                                    <h5>üìã API Flow (Based on BOM Documentation):</h5>
                                    <ul>
                                        <li><strong>Step 1:</strong> Your JWT Token ‚Üí Get Access Token</li>
                                        <li><strong>Step 2:</strong> Access Token ‚Üí Make API calls</li>
                                        <li><strong>Step 3:</strong> Refresh Token ‚Üí Renew Access Token</li>
                                    </ul>
                                    <hr/>
                                    <h5>‚ö†Ô∏è Common Issues:</h5>
                                    <ul>
                                        <li><strong>"No permission"</strong> ‚Üí Check if ZNS feature is enabled in your BOM account</li>
                                        <li><strong>Invalid JWT</strong> ‚Üí Make sure you're using the JWT token, not API Secret</li>
                                        <li><strong>Token expired</strong> ‚Üí Get a fresh JWT token from BOM dashboard</li>
                                        <li><strong>Account not verified</strong> ‚Üí Complete account verification in BOM dashboard</li>
                                    </ul>
                                </div>
                            </group>
                        </page>
                        <page string="Account Verification">
                            <group>
                                <div class="alert alert-warning" role="alert">
                                    <h4>‚úÖ Account Checklist:</h4>
                                    <p>Make sure your BOM account has:</p>
                                    <ul>
                                        <li>‚úÖ <strong>Email verified</strong></li>
                                        <li>‚úÖ <strong>Phone verified</strong></li>
                                        <li>‚úÖ <strong>Business information completed</strong></li>
                                        <li>‚úÖ <strong>Zalo Official Account connected</strong></li>
                                        <li>‚úÖ <strong>ZNS feature enabled</strong></li>
                                        <li>‚úÖ <strong>Active subscription</strong></li>
                                    </ul>
                                    
                                    <hr/>
                                    <h5>üîç Debug Steps:</h5>
                                    <ol>
                                        <li>Click <strong>"Debug API"</strong> button above</li>
                                        <li>Check Odoo logs for detailed error messages</li>
                                        <li>Verify your API key in BOM dashboard</li>
                                        <li>Contact BOM support if issue persists</li>
                                    </ol>
                                </div>
                            </group>
                        </page>
                        <page string="Advanced" groups="base.group_no_one">
                            <group string="Debug Information">
                                <field name="refresh_token" readonly="1"/>
                                <field name="api_secret" readonly="1"/>
                                <field name="last_error" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="zns_connection_tree_view" model="ir.ui.view">
        <field name="name">zns.connection.tree</field>
        <field name="model">zns.connection</field>
        <field name="arch" type="xml">
            <tree string="ZNS Connections" decoration-success="active==True and access_token!=False" 
                  decoration-danger="last_error!=False" decoration-muted="active==False">
                <field name="name"/>
                <field name="api_base_url"/>
                <field name="active"/>
                <field name="token_expires_at"/>
                <field name="last_sync"/>
                <field name="last_error" optional="hide"/>
                <field name="access_token" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="zns_connection_action" model="ir.actions.act_window">
        <field name="name">ZNS Connections</field>
        <field name="res_model">zns.connection</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                üîë Create your first ZNS connection!
            </p>
            <p>
                Configure your BOM ZNS API connection with your API Key to start sending Zalo messages.
            </p>
            <p>
                <strong>Quick Start:</strong><br/>
                1. Get API Key from <a href="https://zns.bom.asia" target="_blank">BOM Dashboard</a><br/>
                2. Create new connection<br/>
                3. Enter API Key<br/>
                4. Test connection<br/>
                5. If you get "No permission" error, check account setup guide!
            </p>
        </field>
    </record>
</odoo>