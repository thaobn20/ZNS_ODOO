<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add ZNS button to Invoice header -->
    <record id="account_move_form_zns_button" model="ir.ui.view">
        <field name="name">account.move.form.zns.button</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button type="object" name="action_send_zns" 
                        class="btn-secondary" 
                        string="Send ZNS"
                        attrs="{'invisible': [('move_type', 'not in', ['out_invoice', 'out_refund'])]}"/>
            </xpath>
        </field>
    </record>

    <!-- Add ZNS tab to Invoice Form -->
    <record id="account_move_form_zns_tab" model="ir.ui.view">
        <field name="name">account.move.form.zns.tab</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Zalo ZNS" name="zns_messages"
                      attrs="{'invisible': [('move_type', 'not in', ['out_invoice', 'out_refund'])]}">
                    
                    <group>
                        <group string="ZNS Configuration">
                            <field name="zns_auto_send" string="Auto Send ZNS" 
                                   help="Automatically send ZNS when invoice is posted"/>
                            <field name="zns_message_count" string="ZNS Messages Sent" readonly="1"/>
                            <field name="zns_template_info" string="Template Info" readonly="1"
                                   attrs="{'invisible': [('zns_template_info', '=', False)]}"/>
                        </group>
                        <group string="Quick Actions">
                            <button name="action_send_zns" 
                                    string="ðŸ“¤ Send ZNS Message" 
                                    type="object" 
                                    class="btn-primary"/>
                            <button name="action_test_zns_template" 
                                    string="ðŸ§ª Test Template" 
                                    type="object" 
                                    class="btn-warning"/>
                            <button name="action_retry_auto_zns" 
                                    string="ðŸ”„ Retry Auto Send" 
                                    type="object" 
                                    class="btn-info"/>
                        </group>
                    </group>
                    
                    <group string="Last Error" attrs="{'invisible': [('zns_last_error', '=', False)]}">
                        <field name="zns_last_error" readonly="1" nolabel="1" widget="text"/>
                    </group>
                    
                    <separator string="ZNS Message History"/>
                    <field name="zns_message_ids" nolabel="1" readonly="1">
                        <tree decoration-success="status=='sent'" 
                              decoration-danger="status=='failed'" 
                              decoration-muted="status=='draft'"
                              create="false" delete="false" edit="false">
                            <field name="create_date" string="Created"/>
                            <field name="template_id" string="Template"/>
                            <field name="phone" string="Phone"/>
                            <field name="status" string="Status"/>
                            <field name="sent_date" string="Sent"/>
                            <field name="error_message" string="Error" optional="hide"/>
                            <button name="send_zns_message" 
                                    string="Retry" 
                                    type="object" 
                                    icon="fa-refresh"
                                    attrs="{'invisible': [('status', '=', 'sent')]}"
                                    confirm="Retry sending this ZNS message?"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>