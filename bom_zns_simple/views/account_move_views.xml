<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- COMPLETELY NEW AND CLEAN ZNS INTEGRATION FOR INVOICES -->
    
    <!-- Just add a simple ZNS button to invoice form -->
    <record id="account_move_zns_button_only" model="ir.ui.view">
        <field name="name">account.move.zns.button.only</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button type="object" name="action_send_zns" 
                        class="oe_stat_button" 
                        icon="fa-paper-plane"
                        string="Send ZNS"
                        attrs="{'invisible': [('move_type', 'not in', ['out_invoice', 'out_refund'])]}"/>
            </div>
        </field>
    </record>
    
</odoo>