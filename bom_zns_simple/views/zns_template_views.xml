<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Enhanced ZNS Template Views with Document Type Selection -->
    <record id="zns_template_form_view" model="ir.ui.view">
        <field name="name">zns.template.form</field>
        <field name="model">zns.template</field>
        <field name="arch" type="xml">
            <form string="ZNS Template">
                <header>
                    <button name="sync_template_params" string="Sync Parameters from BOM" type="object" class="btn-primary"/>
                    <button name="test_template" string="Test Template" type="object" class="btn-info"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Template Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="template_id" placeholder="e.g., 248079"/>
                            <field name="template_type"/>
                            <field name="apply_to" widget="radio" options="{'horizontal': true}"/>
                            <field name="connection_id"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="last_sync" readonly="1"/>
                            <field name="sync_status" readonly="1" widget="text" attrs="{'invisible': [('sync_status', '=', False)]}"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Parameters and Mapping">
                            <div class="alert alert-info">
                                <h4>ðŸ“‹ Parameter Configuration:</h4>
                                <ol>
                                    <li><strong>Sync from BOM:</strong> Click "Sync Parameters from BOM" to load from your BOM template</li>
                                    <li><strong>Field Mapping:</strong> Map each parameter to document fields for auto-fill</li>
                                    <li><strong>Document Types:</strong> Set "Apply To" above to specify SO/Invoice/Contact usage</li>
                                </ol>
                            </div>
                            
                            <field name="parameter_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="name" readonly="1"/>
                                    <field name="title"/>
                                    <field name="param_type"/>
                                    <field name="required" readonly="1"/>
                                    <field name="field_mapping" placeholder="Select field mapping"/>
                                    <field name="custom_value" attrs="{'invisible': [('field_mapping', '!=', 'custom')], 'required': [('field_mapping', '=', 'custom')]}"/>
                                    <field name="default_value"/>
                                    <field name="description" optional="hide"/>
                                </tree>
                            </field>
                            
                            <div class="alert alert-success mt-3">
                                <h5>âœ… Available Field Mappings:</h5>
                                <div class="row">
                                    <div class="col-md-3">
                                        <strong>Customer:</strong><br/>
                                        â€¢ Customer Name<br/>
                                        â€¢ Customer Phone/Mobile<br/>
                                        â€¢ Customer Email<br/>
                                        â€¢ Customer VAT<br/>
                                        â€¢ Customer Address<br/>
                                    </div>
                                    <div class="col-md-3">
                                        <strong>Document:</strong><br/>
                                        â€¢ Document Number<br/>
                                        â€¢ Document Date<br/>
                                        â€¢ Total Amount<br/>
                                        â€¢ Tax Amount<br/>
                                        â€¢ Currency &amp; Status<br/>
                                    </div>
                                    <div class="col-md-3">
                                        <strong>Company:</strong><br/>
                                        â€¢ Company Name<br/>
                                        â€¢ Company Tax ID<br/>
                                        â€¢ Company Phone<br/>
                                        â€¢ Company Email<br/>
                                        â€¢ Company Address<br/>
                                    </div>
                                    <div class="col-md-3">
                                        <strong>Other:</strong><br/>
                                        â€¢ Salesperson Info<br/>
                                        â€¢ Custom Values<br/>
                                        â€¢ Notes &amp; References<br/>
                                    </div>
                                </div>
                            </div>
                        </page>
                        
                        <page string="Usage Guide">
                            <div class="alert alert-info">
                                <h4>ðŸ“– Template Configuration Guide</h4>
                                
                                <h5>1. Document Type Selection</h5>
                                <ul>
                                    <li><strong>Sales Orders:</strong> Template for SO confirmation, updates</li>
                                    <li><strong>Invoices:</strong> Template for invoice posting, payment reminders</li>
                                    <li><strong>Contacts:</strong> Template for manual contact messaging</li>
                                    <li><strong>All Types:</strong> Universal template for any document</li>
                                </ul>
                                
                                <h5>2. Template Types</h5>
                                <ul>
                                    <li><strong>Transaction:</strong> Order confirmations, invoices</li>
                                    <li><strong>OTP:</strong> Verification codes</li>
                                    <li><strong>Promotion:</strong> Marketing messages</li>
                                    <li><strong>Customer Care:</strong> Support &amp; service messages</li>
                                </ul>
                                
                                <h5>3. Field Mapping Benefits</h5>
                                <ul>
                                    <li><strong>Auto-fill parameters</strong> from document data</li>
                                    <li><strong>Consistent messaging</strong> across all documents</li>
                                    <li><strong>Reduced errors</strong> with automatic data extraction</li>
                                    <li><strong>Support for company tax ID</strong> and all document fields</li>
                                </ul>
                                
                                <h5>4. Common Parameter Names</h5>
                                <code>customer_name, order_id, amount, order_date, customer_phone, company_name, company_tax_id</code>
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Enhanced Template Tree View -->
    <record id="zns_template_tree_view" model="ir.ui.view">
        <field name="name">zns.template.tree</field>
        <field name="model">zns.template</field>
        <field name="arch" type="xml">
            <tree string="ZNS Templates" decoration-success="active==True and last_sync!=False" 
                  decoration-warning="active==True and last_sync==False"
                  decoration-muted="active==False">
                <field name="name"/>
                <field name="template_id"/>
                <field name="template_type"/>
                <field name="apply_to"/>
                <field name="connection_id"/>
                <field name="active"/>
                <field name="last_sync"/>
                <button name="sync_template_params" string="Sync" type="object" icon="fa-refresh" class="btn-link"/>
                <button name="test_template" string="Test" type="object" icon="fa-play" class="btn-link"/>
            </tree>
        </field>
    </record>

    <!-- Template Parameter Form View -->
    <record id="zns_template_parameter_form_view" model="ir.ui.view">
        <field name="name">zns.template.parameter.form</field>
        <field name="model">zns.template.parameter</field>
        <field name="arch" type="xml">
            <form string="Template Parameter">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="title"/>
                            <field name="param_type"/>
                            <field name="required"/>
                        </group>
                        <group>
                            <field name="field_mapping"/>
                            <field name="custom_value" attrs="{'invisible': [('field_mapping', '!=', 'custom')], 'required': [('field_mapping', '=', 'custom')]}"/>
                            <field name="default_value"/>
                        </group>
                    </group>
                    <group string="Description">
                        <field name="description" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Template Action -->
    <record id="zns_template_action" model="ir.actions.act_window">
        <field name="name">ZNS Templates</field>
        <field name="res_model">zns.template</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ðŸ“‹ Create your first ZNS template!
            </p>
            <p>
                Configure ZNS templates with document type selection and field mapping.
            </p>
            <p>
                <strong>Quick Start:</strong><br/>
                1. Create template with BOM Template ID<br/>
                2. Select document type (SO/Invoice/Contact)<br/>
                3. Sync parameters from BOM<br/>
                4. Map parameters to document fields<br/>
                5. Templates auto-apply based on document type
            </p>
        </field>
    </record>
</odoo>