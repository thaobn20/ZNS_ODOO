<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Complete ZNS Template Views with Full Field Mapping Support -->
    <record id="zns_template_form_view" model="ir.ui.view">
        <field name="name">zns.template.form</field>
        <field name="model">zns.template</field>
        <field name="arch" type="xml">
            <form string="ZNS Template">
                <header>
                    <button name="sync_template_params" string="Sync Parameters from BOM" type="object" class="btn-primary"/>
                    <button name="test_template" string="Test Template" type="object" class="btn-info"/>
                    <button name="action_view_mappings" string="View Mappings" type="object" class="btn-secondary"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Template Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="template_id" placeholder="e.g., 248079"/>
                            <field name="template_type"/>
                            <field name="connection_id"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="last_sync" readonly="1"/>
                            <field name="sync_status" readonly="1" widget="text" attrs="{'invisible': [('sync_status', '=', False)]}"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Parameters and Mapping">
                            <div class="alert alert-info">
                                <h4>ðŸ“‹ How to Set Up Parameters:</h4>
                                <ol>
                                    <li><strong>Sync from BOM:</strong> Click "Sync Parameters from BOM" to automatically load parameters from your BOM template</li>
                                    <li><strong>Map to Fields:</strong> For each parameter, select which document field it should get data from</li>
                                    <li><strong>Custom Values:</strong> Set default values or custom values for parameters</li>
                                </ol>
                            </div>
                            
                            <field name="parameter_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="name" readonly="1"/>
                                    <field name="title"/>
                                    <field name="param_type"/>
                                    <field name="required" readonly="1"/>
                                    <field name="so_field_mapping" placeholder="Select field to auto-map"/>
                                    <field name="custom_value" attrs="{'invisible': [('so_field_mapping', '!=', 'custom')], 'required': [('so_field_mapping', '=', 'custom')]}"/>
                                    <field name="default_value"/>
                                    <field name="description" optional="hide"/>
                                </tree>
                            </field>
                            
                            <div class="alert alert-success mt-3">
                                <h5>âœ… Available Field Mappings:</h5>
                                <div class="row">
                                    <div class="col-md-3">
                                        <strong>Customer:</strong><br/>
                                        â€¢ Customer Name<br/>
                                        â€¢ Customer Mobile/Phone<br/>
                                        â€¢ Customer Email<br/>
                                        â€¢ Customer VAT<br/>
                                        â€¢ Customer Address<br/>
                                    </div>
                                    <div class="col-md-3">
                                        <strong>Order:</strong><br/>
                                        â€¢ SO/Invoice Number<br/>
                                        â€¢ Order/Invoice Date<br/>
                                        â€¢ Total Amount<br/>
                                        â€¢ Tax Amount<br/>
                                        â€¢ Currency<br/>
                                    </div>
                                    <div class="col-md-3">
                                        <strong>Company:</strong><br/>
                                        â€¢ Company Name<br/>
                                        â€¢ Company VAT<br/>
                                        â€¢ Company Phone<br/>
                                        â€¢ Company Email<br/>
                                        â€¢ Company Address<br/>
                                    </div>
                                    <div class="col-md-3">
                                        <strong>Other:</strong><br/>
                                        â€¢ Salesperson<br/>
                                        â€¢ Sales Team<br/>
                                        â€¢ Payment Terms<br/>
                                        â€¢ Product Details<br/>
                                        â€¢ Custom Value<br/>
                                    </div>
                                </div>
                            </div>
                        </page>
                        
                        <page string="Template Info">
                            <group>
                                <group string="BOM Template Details">
                                    <field name="template_id" readonly="1"/>
                                    <field name="template_type" readonly="1"/>
                                </group>
                                <group string="Sync Information">
                                    <field name="last_sync" readonly="1"/>
                                    <div class="o_form_label">Last Sync Status</div>
                                    <div>
                                        <field name="sync_status" readonly="1" nolabel="1" widget="text" attrs="{'invisible': [('sync_status', '=', False)]}"/>
                                    </div>
                                </group>
                            </group>
                            
                            <div class="alert alert-warning" attrs="{'invisible': [('sync_status', '=', False)]}">
                                <h5>ðŸ”„ Sync Status Details:</h5>
                                <field name="sync_status" readonly="1" widget="text" nolabel="1"/>
                            </div>
                        </page>
                        
                        <page string="Mapping Guide">
                            <div class="alert alert-info">
                                <h4>ðŸ“– Field Mapping Guide</h4>
                                
                                <h5>1. Customer Information</h5>
                                <ul>
                                    <li><strong>Customer Name:</strong> partner_id.name</li>
                                    <li><strong>Customer Phone:</strong> partner_id.mobile or partner_id.phone</li>
                                    <li><strong>Customer Email:</strong> partner_id.email</li>
                                    <li><strong>Customer VAT:</strong> partner_id.vat</li>
                                    <li><strong>Customer Address:</strong> partner_id.street, city, country</li>
                                </ul>
                                
                                <h5>2. Order/Invoice Information</h5>
                                <ul>
                                    <li><strong>Document Number:</strong> name (SO001, INV001)</li>
                                    <li><strong>Date:</strong> date_order / invoice_date</li>
                                    <li><strong>Amount:</strong> amount_total, amount_untaxed, amount_tax</li>
                                    <li><strong>Currency:</strong> currency_id.name</li>
                                    <li><strong>Payment Terms:</strong> payment_term_id.name</li>
                                </ul>
                                
                                <h5>3. Company Information</h5>
                                <ul>
                                    <li><strong>Company Name:</strong> company_id.name</li>
                                    <li><strong>Company VAT:</strong> company_id.vat</li>
                                    <li><strong>Company Contact:</strong> company_id.phone, company_id.email</li>
                                </ul>
                                
                                <h5>4. Staff Information</h5>
                                <ul>
                                    <li><strong>Salesperson:</strong> user_id.name</li>
                                    <li><strong>Sales Team:</strong> team_id.name</li>
                                </ul>
                                
                                <h5>5. Product Information</h5>
                                <ul>
                                    <li><strong>Product Name:</strong> order_line.product_id.name (first product)</li>
                                    <li><strong>Quantity:</strong> order_line.product_uom_qty</li>
                                    <li><strong>Price:</strong> order_line.price_unit</li>
                                </ul>
                                
                                <h5>6. Custom Values</h5>
                                <p>Select "Custom Value" to set your own static text that will be used for this parameter.</p>
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Template Tree View -->
    <record id="zns_template_tree_view" model="ir.ui.view">
        <field name="name">zns.template.tree</field>
        <field name="model">zns.template</field>
        <field name="arch" type="xml">
            <tree string="ZNS Templates" decoration-success="active==True and last_sync!=False" 
                  decoration-warning="active==True and last_sync==False"
                  decoration-muted="active==False">
                <field name="name"/>
                <field name="template_id"/>
                <field name="template_type"/>
                <field name="connection_id"/>
                <field name="active"/>
                <field name="last_sync"/>
                <button name="sync_template_params" string="Sync" type="object" icon="fa-refresh" class="btn-link"/>
                <button name="test_template" string="Test" type="object" icon="fa-play" class="btn-link"/>
            </tree>
        </field>
    </record>

    <!-- Template Parameter Form View -->
    <record id="zns_template_parameter_form_view" model="ir.ui.view">
        <field name="name">zns.template.parameter.form</field>
        <field name="model">zns.template.parameter</field>
        <field name="arch" type="xml">
            <form string="Template Parameter">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="title"/>
                            <field name="param_type"/>
                            <field name="required"/>
                        </group>
                        <group>
                            <field name="so_field_mapping"/>
                            <field name="custom_value" attrs="{'invisible': [('so_field_mapping', '!=', 'custom')], 'required': [('so_field_mapping', '=', 'custom')]}"/>
                            <field name="default_value"/>
                        </group>
                    </group>
                    <group string="Description">
                        <field name="description" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Template Action -->
    <record id="zns_template_action" model="ir.actions.act_window">
        <field name="name">ZNS Templates</field>
        <field name="res_model">zns.template</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ðŸ“‹ Create your first ZNS template!
            </p>
            <p>
                Set up ZNS message templates from your BOM dashboard and map parameters to document fields.
            </p>
            <p>
                <strong>Quick Start:</strong><br/>
                1. Create new template<br/>
                2. Enter Template ID from BOM<br/>
                3. Click "Sync Parameters from BOM"<br/>
                4. Map parameters to document fields<br/>
                5. Templates will be auto-selected based on conditions
            </p>
        </field>
    </record>
</odoo>