<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sale Order Form View - Add ZNS Integration -->
    <record id="sale_order_form_zns_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.zns.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Add ZNS button to button box -->
            <div name="button_box" position="inside">
                <button type="object" name="action_view_zns_messages" 
                        class="oe_stat_button" icon="fa-comments">
                    <field name="zns_message_count" widget="statinfo" string="ZNS"/>
                </button>
            </div>
            
            <!-- Add ZNS button to header -->
            <xpath expr="//header" position="inside">
                <button name="action_send_zns" 
                        string="Send ZNS" 
                        type="object" 
                        class="btn-secondary"
                        attrs="{'invisible': [('state', 'in', ['draft', 'cancel'])]}"/>
            </xpath>
            
            <!-- Add ZNS tab -->
            <xpath expr="//notebook" position="inside">
                <page string="Zalo ZNS" name="zns_messages">
                    <group>
                        <group string="Configuration">
                            <field name="zns_auto_send" string="Auto Send ZNS" 
                                   help="Automatically send ZNS when order is confirmed"/>
                            <field name="zns_message_count" string="ZNS Messages Sent" readonly="1"/>
                            <field name="zns_best_template_info" string="Template Info" readonly="1"
                                   attrs="{'invisible': [('zns_best_template_info', '=', False)]}"/>
                        </group>
                        <group string="Actions">
                            <button name="action_send_zns" 
                                    string="ðŸ“¤ Send ZNS Message" 
                                    type="object" 
                                    class="btn-primary"/>
                        </group>
                    </group>
                    
                    <separator string="ZNS Message History"/>
                    <field name="zns_message_ids" nolabel="1" readonly="1">
                        <tree decoration-success="status=='sent'" 
                              decoration-danger="status=='failed'" 
                              decoration-muted="status=='draft'"
                              create="false" delete="false" edit="false">
                            <field name="create_date" string="Created"/>
                            <field name="template_id" string="Template"/>
                            <field name="phone" string="Phone"/>
                            <field name="status" string="Status"/>
                            <field name="sent_date" string="Sent"/>
                            <field name="error_message" string="Error" optional="hide"/>
                            <button name="send_zns_message" 
                                    string="Retry" 
                                    type="object" 
                                    icon="fa-refresh"
                                    attrs="{'invisible': [('status', '=', 'sent')]}"
                                    confirm="Retry sending this ZNS message?"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>