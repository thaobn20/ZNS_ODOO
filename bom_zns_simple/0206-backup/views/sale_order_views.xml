<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend Sale Order Form View - Simple version without zns_template_mapping_id -->
    <record id="sale_order_form_zns_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.zns.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Add ZNS button to button box -->
            <div name="button_box" position="inside">
                <button type="object" name="action_send_zns_manual" 
                        class="oe_stat_button" icon="fa-paper-plane">
                    <div class="o_stat_info">
                        <field name="zns_message_count" widget="statinfo"/>
                        <span class="o_stat_text">ZNS</span>
                    </div>
                </button>
            </div>
            
            <!-- Add ZNS Configuration in Other Info tab -->
            <page name="other_information" position="inside">
                <group string="ZNS Configuration">
                    <field name="zns_auto_send"/>
                    <field name="zns_template_id" 
                           attrs="{'invisible': [('zns_auto_send', '=', False)]}"
                           help="Auto-selected from active templates"/>
                </group>
            </page>
        </field>
    </record>
</odoo>