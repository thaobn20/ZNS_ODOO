<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Complete ZNS Integration for Invoice -->
    <record id="account_move_form_zns_inherit" model="ir.ui.view">
        <field name="name">account.move.form.zns.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add ZNS button to button box -->
            <div name="button_box" position="inside">
                <button type="object" name="action_send_zns" 
                        class="oe_stat_button" icon="fa-paper-plane"
                        attrs="{'invisible': [('move_type', 'not in', ['out_invoice', 'out_refund'])]}">
                    <div class="o_stat_info">
                        <field name="zns_message_count" string="ZNS Messages"/>
                    </div>
                </button>
            </div>
        </field>
    </record>

    <!-- Add ZNS tab to Invoice Form -->
    <record id="account_move_form_zns_tab_inherit" model="ir.ui.view">
        <field name="name">account.move.form.zns.tab.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook[last()]" position="inside">
                <page string="Zalo ZNS" name="zns_messages"
                      attrs="{'invisible': [('move_type', 'not in', ['out_invoice', 'out_refund'])]}">
                    <div class="alert alert-info">
                        <h4>ðŸ“± Zalo ZNS Messages</h4>
                        <p>Send ZNS notifications to customers about invoice status and payment reminders.</p>
                        <p>Template will be automatically selected based on template mappings configured in Templates menu.</p>
                    </div>
                    
                    <!-- ZNS Configuration Section -->
                    <group string="ZNS Configuration">
                        <field name="zns_auto_send" help="Automatically send ZNS when invoice is posted"/>
                        <field name="zns_best_template_info" readonly="1" 
                               attrs="{'invisible': [('zns_best_template_info', '=', False)]}"
                               string="Selected Template"/>
                    </group>
                    
                    <!-- Action Buttons -->
                    <group>
                        <button name="action_send_zns" 
                                string="ðŸ“¤ Send ZNS Message"
                                type="object" 
                                class="btn-primary"
                                attrs="{'invisible': [('move_type', 'not in', ['out_invoice', 'out_refund'])]}"/>
                        <button name="action_view_zns_messages" 
                                string="ðŸ“‹ View All ZNS Messages"
                                type="object" 
                                class="btn-secondary"
                                attrs="{'invisible': [('zns_message_count', '=', 0)]}"/>
						<button name="action_manual_test_zns" 
								string="ðŸ§ª Test Manual ZNS" 
								type="object" 
								class="btn-warning"
								attrs="{'invisible': [('move_type', 'not in', ['out_invoice', 'out_refund'])]}"/>
						<button name="action_test_auto_send_zns" 
								string="ðŸ§ª Test Auto Send" 
								type="object" 
								class="btn-info"
								attrs="{'invisible': [('move_type', 'not in', ['out_invoice', 'out_refund'])]}"/>
					</group>
                    
                    <separator string="ðŸ“‹ Message History"/>
                    <field name="zns_message_ids" nolabel="1" readonly="1">
                        <tree decoration-success="status=='sent'" 
                              decoration-danger="status=='failed'" 
                              decoration-muted="status=='draft'"
                              create="false" edit="false">
                            <field name="create_date" string="Created"/>
                            <field name="template_id" string="Template"/>
                            <field name="phone" string="Phone"/>
                            <field name="status" string="Status"/>
                            <field name="sent_date" string="Sent"/>
                            <field name="message_id" string="Message ID" optional="hide"/>
                            <field name="error_message" string="Error" optional="hide"/>
                            <button name="send_zns_message" 
                                    string="Retry" 
                                    type="object" 
                                    icon="fa-refresh" 
                                    attrs="{'invisible': [('status', '=', 'sent')]}"
                                    confirm="Retry sending this ZNS message?"/>
                        </tree>
                        <form>
                            <sheet>
                                <div class="oe_title">
                                    <h1>
                                        <field name="display_name"/>
                                    </h1>
                                </div>
                                <group>
                                    <group>
                                        <field name="template_id" readonly="1"/>
                                        <field name="phone" readonly="1"/>
                                        <field name="status" readonly="1"/>
                                        <field name="sent_date" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="message_id" readonly="1"/>
                                        <field name="create_date" readonly="1"/>
                                        <field name="connection_id" readonly="1"/>
                                        <field name="partner_id" readonly="1"/>
                                    </group>
                                </group>
                                <group string="Parameters" attrs="{'invisible': [('parameters', '=', False)]}">
                                    <field name="parameters" widget="ace" options="{'mode': 'json'}" readonly="1" nolabel="1"/>
                                </group>
                                <group string="Error Details" attrs="{'invisible': [('error_message', '=', False)]}">
                                    <field name="error_message" readonly="1" nolabel="1" widget="text"/>
                                </group>
                            </sheet>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Add ZNS Configuration to Invoice Other Info Tab -->
    <record id="account_move_form_zns_config_inherit" model="ir.ui.view">
        <field name="name">account.move.form.zns.config.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add ZNS configuration in the Other Info tab if it exists -->
            <xpath expr="//page[@name='other_info']" position="inside">
                <group string="ZNS Configuration" 
                       attrs="{'invisible': [('move_type', 'not in', ['out_invoice', 'out_refund'])]}">
                    <field name="zns_auto_send" help="Automatically send ZNS when invoice is posted"/>
                    <field name="zns_best_template_info" readonly="1" 
                           attrs="{'invisible': [('zns_best_template_info', '=', False)]}"
                           string="Template Info"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>